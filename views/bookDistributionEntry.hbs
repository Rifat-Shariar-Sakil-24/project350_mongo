<body>
  <div class="container">
    <form class="well form-horizontal" id="contact_form">
      <fieldset>
        <!-- Text input-first name -->

        <!-- Text input-first name -->
        <input type="hidden" id="classNumberNumerical" value="{{ClassNumber}}">
                <h3 id="classNumberBangla"></h3>
                <br>
        <div class="form-group">
          <label class="col-md-4 control-label">শ্রেণি</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <label for="classNumber"></label>
              <!-- Existing input field with readonly attribute -->
              <select id="classNumber" name="classNumber" class="form-control" required>
              <option id="showClassNumber" value="{{ClassNumber}}"></option>
                <!-- Add more options as needed -->
              </select>
            </div>
          </div>
        </div>

        <!-- Text input-roll -->
        <div class="form-group">
          <label class="col-md-4 control-label">রোল</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
              <input id="rollNumber" name="rollNumber" placeholder="Enter student's integer roll" class="form-control" type="number"
                step="1" required />
            </div>
            <small id="rollNumberError" class="text-danger"></small>
          </div>
        </div>

        <!-- Number input for year -->
        <div class="form-group">
          <label class="col-md-4 control-label">শিক্ষাবর্ষ</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
              <input id="yearNumber" name="yearNumber" placeholder="Enter student's study year" class="form-control" type="number"
                step="1" required />
            </div>
            <small id="studyYearError" class="text-danger"></small>
          </div>
        </div>


        <div class="form-group">
          <label class="col-md-4 control-label">Student Name</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
              <span style="font-weight: bold; color:red" id="showbox" class="form-control">No such student found</span>
            </div>
          </div>
        </div>


        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Bangla Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="bangla" name="bangla"  />
            <label for="bangla">Yes</label>
          </div>
        </div>

        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received English Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="english" name="english"  />
            <label for="english">Yes</label>
          </div>
        </div>

        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Math Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="math" name="math"  />
            <label for="math">Yes</label>
          </div>
        </div>

        <div id="science" class="form-group" >
          <label class="col-md-4 control-label">Has this student received Science Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="science" name="science"  />
            <label for="science">Yes</label>
          </div>
        </div>

         <div id="socialscience" class="form-group">
          <label class="col-md-4 control-label">Has this student received Social Science Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="socialscience" name="socialscience"  />
            <label for="socialscience">Yes</label>
          </div>
        </div>

         <div id="religion" class="form-group">
          <label class="col-md-4 control-label">Has this student received Religion Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="religion" name="religion"  />
            <label for="religion">Yes</label>
          </div>
        </div>





        <!-- Text area-description -->



        <!-- Your existing Submit Button -->
        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4">
            <button type="submit" class="btn btn-warning">
              Submit <span class="glyphicon glyphicon-send"></span>
            </button>
          </div>
        </div>

      </fieldset>
    </form>








