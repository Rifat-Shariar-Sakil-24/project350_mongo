    <style>
       
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

       
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

      
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

      
        .menu-btn {
            cursor: pointer;
            padding: 10px;
        }

      
        .logo {
            width: 100px;
           
        }

      
        .main-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .main-menu {
            list-style-type: none;
            display: flex;
        }

        .main-menu li {
            margin-left: 20px;
        }

        .nav-link {
            text-decoration: none;
            color: #333;
            font-weight: 600;
        }

       
        .showcase {
            height: 300px;
           
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: #fff;
            margin-bottom: 20px;
        }

        .showcase .btn {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
        }

        .showcase .btn:hover {
            background-color: #0056b3;
        }

       
        .row {
            margin-bottom: 20px;
        }

        .row-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <div class="menu-btn">
        <i class="fas fa-bars fa-2x"></i>
    </div>

    <div class="container">
    <!-- Nav -->
    <nav class="main-nav">
        <img src="./assets/images/annada.jpeg" alt="logo" class="logo" />
        <ul class="main-menu">
            <li>
                <a href="login" class="nav-link" style="font-weight: 600">লগইন</a>
            </li>
            <li>
                <a href="register" class="nav-link" style="font-weight: 600">রেজিস্টার</a>
            </li>
        </ul>
    </nav>
    <header class="showcase" style="background-image: url(./assets/images/bg-8.jpg);">
        <a href="http://www.nctb.gov.bd/site/page/85da3a9e-fd7f-4b2f-be74-f8e6637ae785/-" target="_blank"
            class="btn">
            জাতীয় শিক্ষাক্রম ও পাঠ্যপুস্তক বোর্ড (এনসিটিবি)<i class="fas fa-chevron-right"></i>
        </a>
    </header>
    <div class="contain">
        <div class="row">
            <div class="row-title" style="text-align: center;">
                <h1>আমাদের স্কুল</h1>
            </div>
        </div>
    </div>
</div>

