<body>
  <div class="container">
    <form class="well form-horizontal" id="contact_form">
      <fieldset>
        <!-- Text input-first name -->

        <!-- Text input-first name -->
        <input type="hidden" id="classNumberNumerical" value="{{ClassNumber}}">
                <h3 id="classNumberBangla"></h3>
                <br>
        <div class="form-group">
          <label class="col-md-4 control-label">শ্রেণি</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <label for="classNumber"></label>
              <!-- Existing input field with readonly attribute -->
              <select id="classNumber" name="classNumber" class="form-control" required>
              <option id="showClassNumber" value="{{ClassNumber}}"></option>
                <!-- Add more options as needed -->
              </select>
            </div>
          </div>
        </div>


        <!-- Number input for year -->
        <div class="form-group">
          <label class="col-md-4 control-label">শিক্ষাবর্ষ</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
              <input id="yearNumber" name="yearNumber" placeholder="Enter student's study year" class="form-control" type="text"
                step="1" required />
            </div>
            <small id="studyYearError" class="text-danger"></small>
          </div>
        </div>


              <div class="form-group">
                    <label class="col-md-4 control-label">তারিখ</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            <input name="date" placeholder="তারিখ" class="form-control" type="date"  required/>
                        </div>
                        <small id="dateError" class="text-danger"></small>

                    </div>
                </div>

            

                <!-- Text input-class -->

                <!-- Text input-subject's নাম
 -->
                <div class="form-group">
                    <label class="col-md-4 control-label">বিষয়</label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-book"></i></span>
                            <!-- Replace the text input with a select element -->
                            <select name="subject" class="form-control">
                                <option value="bangla" id="english" >আমার বাংলা বই</option>
                                <option value="english" >English for Today</option>
                                <option value="math">প্রাথমিক গণিত</option>
                                 <option value="science" id="science" >Science</option>
                                <option value="socialscience" id="socialscience" hidden>Social Science</option>
                                <option value="religion" id="religion" hidden>Religion</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Text input-book number -->
                <div class="form-group">
                    <label class="col-md-4 control-label">বইয়ের সংখ্যা </label>
                    <div class="col-md-4 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-list-alt"></i></span>
                            <input name="bookNumber" placeholder="বইয়ের সংখ্যা" class="form-control" type="text" required />
                        </div>
                         <div id="bookNumberError" style="color: red;"></div>
                    </div>
                </div>








        <!-- Text area-description -->



        <!-- Your existing Submit Button -->
        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4">
            <button type="submit" class="btn btn-warning">
              Submit <span class="glyphicon glyphicon-send"></span>
            </button>
          </div>
